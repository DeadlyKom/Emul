			<Item Name="NMI">Signals[0][33]</Item>
			<Item Name="RESET">Signals[0][34]</Item>
			
			<Item Name="BUSRQ">Signals[0][35]</Item>
			<Item Name="BUSACK">Signals[0][36]</Item>
		</Expand>
	</Type>

	<Type Name="FName">
